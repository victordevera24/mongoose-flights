<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flights</title>
</head>
<body>
    <form action="/flights" >
        <input type="submit" value="All Flights">
    </form>
    <form action="flights/new" >
        <input type="submit" value="Create New Flight">
    </form>
    <h1>Hello Flights</h1>
    <table>
        <thead>
          <tr>
            <th>Airlines</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departs</th>
          </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(f) { %>
            <tr>
              <td><%= f.airline %></td>
              <td><%= f.airport %></td>
              <td><%= f.flightNo %></td>
              <td><%= f.departs %></td>
            </tr>
            <% }); %>
        </tbody>
      </table>
</body>
</html>